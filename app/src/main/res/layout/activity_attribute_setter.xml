<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="AttributeSetterBinding">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ui.AttributeSetterActivity">

        <com.xshen.databindingguide.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customText="@{`Custom Fonts Text`}"
            android:textSize="@dimen/text_30px"
            app:font="@{`alegreya_bold`}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Custom Fonts Text`}"
            android:textSize="@dimen/text_30px"
            app:font="@{`alegreya_bold`}" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:placeholder="@{@drawable/placeholder}"
            app:url="@{`http://img2.cache.netease.com/photo/0001/2016-07-21/BSGSEIG100AO0001.jpg`}" />

    </LinearLayout>
</layout>